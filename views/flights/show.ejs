<%- include('../partials/header') %>

<h1 align="center"> Flight Detail </h1>
<h2>Departing Flight</h2>
<table>
    <thead>
    <tr>
        <th>Airline</th>
        <th>Airport</th>
        <th>Flight No.</th>
        <th>Departs</th>
    </tr>
    </thead>
    <tbody>
        <tr>
            <td><%= flight.airline %></td>
            <td><%= flight.airport %></td>
            <td><%= flight.flightNo %></td>
            <td><%= flight.departs %></td>
        </tr>
        </tbody>
    </table>
    <br><br>
    <h2>Destination</h2>
    <% if (flight.destinations.length) { %>
    <table>
        <thead>
        <tr>
            <th>Airline</th>
            <th>Airport</th>
            <th>Flight No.</th>
            <th>Arrival</th>
        </tr>
        </thead>
        <tbody>
            <% flight.destinations.forEach(function(d) { %>
            <tr>
                <td><%= flight.airline %></td>
                <td><%= d.airport %></td>
                <td><%= flight.flightNo %></td>
                <td><%= d.arrival %></td>
            </tr>
            <% }); %>
            </tbody>
        </table>
        <% } else { %>
            <h4>No Destinations Yet</h4>
        <% } %>        
    <br><br>
    <h2>Enter a Destination</h2>
    <form action="/flights/<%= flight._id%>/destinations" method="POST">
        <label>Airport:
            <select name="airport">
                <option value="PDX">PDX</option>
                <option value="LAX">LAX</option>
                <option value="DFW">DFW</option>
                <option value="SFO">SFO</option>
                <option value="DEN" selected>DEN</option>
            </select>
        </label><br><br>
        <label>Arrival Date:
            <input type="datetime-local" name="arrival">
        </label><br><br>
        <button type="submit">Add Destination</button>
    </form>
    <br><br>
    
    
    <h2>Ticket Information</h2>
    <table>
        <thead>
        <tr>
            <th>Name</th>
            <th>Seat</th>
            <th>Price</th>
        </tr>
        </thead>
        <tbody>
    
            </tbody>
        </table>
    <br><br>

    <h2>New Ticket</h2>
    <form action="/flights/<%= flight._id %>/tickets/new" method="GET">
        <button type="submit">Create New Ticket</button>
    </form>


<%- include('../partials/footer') %>